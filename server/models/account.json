{
  "name": "Account",
  "plural": "accounts",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "fullName": "",
    "institution": "",
    "occupation": "",
    "prefs": {
      "type": "object",
      "default": {
        "media": {
          "audio": true,
          "simple": true,
          "text": true,
          "video": true
        },
        "font": {
          "chosen": "standard",
          "size": 18
        },
        "languages": {
          "english": true,
          "german": true,
          "kurdish": true,
          "arabic": true
        }
      }
    },
    "lang": {
      "type": "string",
      "default": "en"
    },
    "avatar": {
      "type": "string",
      "default": ""
    }
  },
  "validations": [],
  "relations": {
    "mycourses": {
      "type": "hasMany",
      "model": "Course",
      "foreignKey": "",
      "through": "Enrollment"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "createStudent",
        "existsByName",
        "existsByEmail",
        "pwdReset",
        "setNewPwd"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "getRole",
        "changeLanguage"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "editor",
      "permission": "ALLOW",
      "property": "editorNo"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "__link__mycourses"
      ]
    }
  ],
  "methods": {}
}
