{
  "name": "Course",
  "plural": "courses",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "authorName": {
      "type": "string"
    },
    "abstract": {
      "type": "string"
    },
    "keywords": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "locked": {
      "type": "boolean",
      "default": false
    },
    "courseId": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "lastChanged": {
      "type": "date",
      "default": "$now"
    },
    "content": {
      "type": [
        "object"
      ],
      "default": []
    },
    "properties": {
      "type": "object",
      "default": {
        "enrollment": null,
        "simple": false,
        "simpleLanguage": false,
        "startDate": null,
        "endDate": null
      }
    },
    "storageId": {
      "type": "string"
    },
    "files": {
      "type": [
        "object"
      ],
      "default": []
    }
  },
  "validations": [],
  "relations": {
    "author": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": ""
    },
    "students": {
      "type": "hasMany",
      "model": "Account",
      "foreignKey": "",
      "through": "Enrollment"
    },
    "flags": {
      "type": "hasMany",
      "model": "Flag"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
